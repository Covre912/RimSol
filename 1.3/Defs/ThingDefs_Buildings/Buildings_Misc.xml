            <costList>
                <Jade>250</Jade>
                <Gold>100</Gold>
                <WoodLog>150</WoodLog>
            </costList>
            <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
            <graphicData>
                <texPath>Things/Building/Misc/LargeShrine/LargeShrine</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(8,8)</drawSize>
