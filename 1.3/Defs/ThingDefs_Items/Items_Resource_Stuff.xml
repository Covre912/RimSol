<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Absteel -->
        <ThingDef ParentName="ResourceBase">
            <defName>RS_Absteel</defName>
            <label>absteel</label>
            <description>A metal alloy found naturally occuring in the Solus homeworlds. Used across the empire as a standard construction material for anything that needs to last.</description>
            <graphicData>
                <texPath>Things/Item/Resource/Absteel</texPath>
                <graphicClass>Graphic_StackCount</graphicClass>
            </graphicData>
            <soundInteract>Metal_Drop</soundInteract>
            <soundDrop>Standard_Drop</soundDrop>
            <statBases>
                <MaxHitPoints>1.5</MaxHitPoints>
                <MarketValue>2.2</MarketValue>
                <Mass>0.5</Mass>
                <StuffPower_Armor_Sharp>1.3</StuffPower_Armor_Sharp>
                <StuffPower_Armor_Blunt>1.1</StuffPower_Armor_Blunt>
                <StuffPower_Armor_Heat>1.35</StuffPower_Armor_Heat>
                <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
                <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
                <SharpDamageMultiplier>1.35</SharpDamageMultiplier>
                <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
                <MeleeWeapon_CooldownMultiplier>1.15</MeleeWeapon_CooldownMultiplier>
                <WorkToBuild>1.35</WorkToBuild>
                <WorkToMake>1.35</WorkToMake>
            </statBases>
            <useHitPoints>false</useHitPoints>
            <healthAffectsPrice>false</healthAffectsPrice>
            <thingCategories>
                <li>ResourcesRaw</li>
            </thingCategories>
            <burnableByRecipe>false</burnableByRecipe>
            <smeltable>true</smeltable>
            <stuffProps>
                <categories>
                    <li>Metallic</li>
                </categories>
                <commonality>0.05</commonality>
                <constructEffect>ConstructMetal</constructEffect>
                <color>(100,60,175)</color>
                <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
                <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
                <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
                <statFactors>
                    <MaxHitPoints>1.2</MaxHitPoints>
                    <Beauty>1.2</Beauty>
                    <Flammability>0.4</Flammability>
                    <WorkToMake>1.2</WorkToMake>
                    <WorkToBuild>1.2</WorkToBuild>
                </statFactors>
            </stuffProps>
            <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        </ThingDef>

    <!-- Abstone -->
        <ThingDef ParentName="ResourceBase">
            <defName>RS_BlocksAbstone</defName>
            <label>abstone</label>
            <description>Dense, knappable stone from the Solus homeworlds. Used for weaponry and artwork in equal measure.</description>
            <graphicData>
                <texPath>Things/Item/Resource/Abstone</texPath>
                <graphicClass>Graphic_StackCount</graphicClass>
            </graphicData>
            <soundInteract>ChunkRock_Drop</soundInteract>
            <soundDrop>ChunkRock_Drop</soundDrop>
            <statBases>
                <MaxHitPoints>200</MaxHitPoints>
                <MarketValue>1</MarketValue>
                <Mass>1</Mass>
                <SharpDamageMultiplier>0.4</SharpDamageMultiplier>
                <BluntDamageMultiplier>0.8</BluntDamageMultiplier>
                <ConstructionSpeedFactor>0.8</ConstructionSpeedFactor>
            </statBases>
            <useHitPoints>false</useHitPoints>
            <healthAffectsPrice>false</healthAffectsPrice>
            <thingCategories>
                <li>StoneBlocks</li>
            </thingCategories>
            <burnableByRecipe>false</burnableByRecipe>
            <minRewardCount>10</minRewardCount>
            <stuffProps>
                <categories>
                    <li>Stony</li>
                </categories>
                <commonality>0.04</commonality>
                <color>(235,235,235)</color>
                <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
                <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
                <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
                <stuffAdjective>abstone</stuffAdjective>
                <appearance>Bricks</appearance>
                <statOffsets>
                    <WorkToBuild>140</WorkToBuild>
                </statOffsets>
                <statFactors>
                    <MarketValue>0.5</MarketValue>
                    <MaxHitPoints>1.2</MaxHitPoints>
                    <Beauty>1.15</Beauty>
                    <Flammability>0</Flammability>
                    <SharpDamageMultiplier>0.65</SharpDamageMultiplier>
                    <WorkToBuild>3.5</WorkToBuild>
                    <WorkToMake>1.5</WorkToMake>
                    <DoorOpenSpeed>0.45</DoorOpenSpeed>
                    <BedRestEffectiveness>0.9</BedRestEffectiveness>
                    <MeleeWeapon_CooldownMultiplier>1.35</MeleeWeapon_CooldownMultiplier>
                </statFactors>
            </stuffProps>
            <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        </ThingDef>

