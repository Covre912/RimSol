            <defName>RS_RawTungstalk</defName>
            <label>tungstalk</label>
            <description>Raw tungstalk.</description>
            <graphicData>
                <texPath>Things/Item/Resource/PlantFoodRaw/Tungstalk</texPath>
            </graphicData>
            <statBases>
                <MarketValue>1.3</MarketValue>
            </statBases>
            <comps>
                <li Class="CompProperties_Rottable">
                    <daysToRotStart>30</daysToRotStart>
                    <rotDestroys>true</rotDestroys>
                </li>
