<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <FactionDef ParentName="FactionBase">
        <defName>RS_SolusDynasty</defName>
        <label>the solus dynasty</label>
        <description>The absols are a traditional, but technologically extremely advanced humanoid alien species which settled here a few decades ago to discover and salvage ancient technologies and artifacts found on the rimworlds and to collect the resources found abundantly and rarely on them. They are feared because of their highly advanced Technology and high-tech weapons.\n\nThey intend to strengthen their race to protect it, and put a high value on traditions, supporting those who help them, however...\n\nThe Dynasty is neutral against outsiders, yet very generous to those that earn their favor, yet very rough to its enemies and those that dare to stand in their way.</description>
        <colorSpectrum>
            <li>(0.50, 0.30, 0.70)</li>
            <li>(0.60, 0.40, 0.80)</li>
        </colorSpectrum>
        <pawnSingular>absol</pawnSingular>
        <pawnsPlural>absols</pawnsPlural> 
        <categoryTag>Solus</categoryTag> 
        <listOrderPriority>30</listOrderPriority>
        <settlementGenerationWeight>1</settlementGenerationWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <leaderTitle>shogun</leaderTitle>
        <factionIconPath>World/WorldObjects/Expanding/SolusTown</factionIconPath> 
        <factionNameMaker>NamerFactionDynasty</factionNameMaker>
        <settlementNameMaker>NamerSettlementDynasty</settlementNameMaker>
        <techLevel>Spacer</techLevel>
        <allowedCultures><li>Rustican</li></allowedCultures>
        <disallowedMemes>
            <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
            <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
        </disallowedMemes>
        <structureMemeWeights>
            <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
            <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">2</Structure_TheistAbstract>
            <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
            <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
            <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
            <Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginIslamic>
            <Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginHindu>
            <Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginBuddhist>
        </structureMemeWeights>
        <backstoryFilters>
            <li>
                <categories>
                    <li>Outlander</li>
                </categories>
                <commonality>0.95</commonality>
            </li>
            <li>
                <categories>
                    <li>Offworld</li>
                </categories>
                <commonality>0.05</commonality>
            </li>
        </backstoryFilters>
        <geneticVariance>0.8</geneticVariance>
        <!--<styleTags>
            <li>Absol</li>
        </styleTags>-->
        <caravanTraderKinds>
            <li>Caravan_Dynasty_BulkGoods</li>
            <li>Caravan_Dynasty_CombatSupplier</li>
            <li>Caravan_Dynasty_Exotic</li>
            <li>Caravan_Dynasty_PirateMerchant</li>
        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Dynasty_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Dynasty_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
        <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>
            <li>
                <kindDef>Combat</kindDef>
                <options>
                    <RS_Servant>5</RS_Servant>
                    <RS_Warrior>6</RS_Warrior>
                    <RS_Samurai>7</RS_Samurai>
                    <RS_Royal>10</RS_Royal>
                    <RS_Shogun>10</RS_Shogun>
                    <RS_WarHero>12</RS_WarHero>
                </options>
            </li>
            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <RS_Peasant>20</RS_Peasant>
                    <RS_Daimio>15</RS_Daimio>
                    <RS_Priest>15</RS_Priest>
                    <RS_Artisan>10</RS_Artisan>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <RS_Merchant>1</RS_Merchant>
                    <RS_Artisan>1</RS_Artisan>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Thrumbo>2</Thrumbo>
                    <Thrumbo>1</Thrumbo>
                </carriers>
                <guards>
                    <RS_Servant>5</RS_Servant>
                    <RS_Warrior>6</RS_Warrior>
                    <RS_Samurai>7</RS_Samurai>
                    <RS_Royal>10</RS_Royal>
                    <RS_Shogun>10</RS_Shogun>
                </guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <RS_Merchant>5</RS_Merchant>
                    <RS_Samurai>7</RS_Samurai>
                    <RS_Warrior>6</RS_Warrior>
                    <RS_Peasant>6</RS_Peasant>
                    <RS_Daimio>8</RS_Daimio>
                    <RS_Artisan>12</RS_Artisan>
                    <RS_Priest>6</RS_Priest>
                    <RS_Royal>12</RS_Royal>
                    <RS_Servant>5</RS_Servant>
                    <RS_Shogun>12</RS_Shogun>
                </options>
            </li>
        </pawnGroupMakers>
        <settlementTexturePath>World/WorldObjects/SolusSettlement</settlementTexturePath>
        <classicIdeo>true</classicIdeo>
        <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
        <configurationListOrderPriority>10</configurationListOrderPriority>
  </FactionDef>

</Defs>
