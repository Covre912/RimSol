<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Absteel -->
        <RecipeDef>
            <defName>RS_Make_Absteel</defName>
            <label>make absteel</label>
            <description>Smelt Absteel by alloying steel together with durable tungsten to gain a material used mainly in solian buildings and equipment. It also looks very nice.</description>
            <jobString>Making absteel.</jobString>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>Cook</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <workAmount>1200</workAmount>
            <recipeUsers>
                <li>ElectricSmelter</li>
            </recipeUsers>
            <ingredients>
                <li>
                    <filter>
                        <thingDefs>
                            <li>Steel</li>
                        </thingDefs>
                    </filter>
                    <count>35</count>
                </li>
                <li>
                    <filter>
                        <thingDefs>
                            <li>RS_Tungsten</li>
                        </thingDefs>
                    </filter>
                    <count>15</count>
                </li>
            </ingredients>
            <fixedIngredientFilter>
                <thingDefs>
                    <li>Steel</li>
                    <li>RS_Tungsten</li>
                </thingDefs>
            </fixedIngredientFilter>
            <products>
                <RS_Absteel>75</RS_Absteel>
            </products>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <workSkill>Crafting</workSkill>
        </RecipeDef>

    <!-- Abstone -->
        <RecipeDef>
            <defName>RS_Make_BlocksAbstone</defName>
            <label>make abstone</label>
            <description>Mix tungsten into rock powder, pour and dry it into abstone, an exotic - albeit common on Solheim -, stony brick that is durable and also nice to look at.</description>
            <jobString>Making abstone.</jobString>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>CutStone</effectWorking>
            <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
            <workAmount>3400</workAmount>
            <recipeUsers>
                <li>TableStonecutter</li>
            </recipeUsers>
            <ingredients>
                <li>
                    <filter>
                        <categories>
                            <li>StoneChunks</li>
                        </categories>
                    </filter>
                    <count>1</count>
                </li>
                <li>
                    <filter>
                        <thingDefs>
                            <li>RS_Tungsten</li>
                        </thingDefs>
                    </filter>
                    <count>5</count>
                </li>
            </ingredients>
            <fixedIngredientFilter>
                <categories>
                    <li>StoneChunks</li>
                </categories>
                <thingDefs>
                    <li>RS_Tungsten</li>
                </thingDefs>
            </fixedIngredientFilter>
            <products>
                <RS_BlocksAbstone>25</RS_BlocksAbstone>
            </products>
        </RecipeDef>
        <RecipeDef>
            <defName>RS_Make_BlocksAbstonefromBlocks</defName>
            <label>make abstone (blocks)</label>
            <description>Mix tungsten dust into rock powder, pour and dry it into abstone, an exotic - albeit common on Solheim -, stony brick that is durable and also nice to look at. Crushing the stone blocks is more time efficiant than entire chunks.</description>
            <jobString>Making abstone.</jobString>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>CutStone</effectWorking>
            <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
            <workAmount>1600</workAmount>
            <recipeUsers>
                <li>TableStonecutter</li>
            </recipeUsers>
            <ingredients>
                <li>
                    <filter>
                        <categories>
                            <li>StoneBlocks</li>
                        </categories>
                    </filter>
                    <count>20</count>
                </li>
                <li>
                    <filter>
                        <thingDefs>
                            <li>RS_Tungsten</li>
                        </thingDefs>
                    </filter>
                    <count>5</count>
                </li>
            </ingredients>
            <fixedIngredientFilter>
                <categories>
                    <li>StoneBlocks</li>
                </categories>
                <thingDefs>
                    <li>RS_Tungsten</li>
                </thingDefs>
            </fixedIngredientFilter>
            <products>
                <RS_BlocksAbstone>30</RS_BlocksAbstone>
            </products>
        </RecipeDef>

    <!-- Tungsten -->
        <RecipeDef>
            <defName>RS_Make_Tungsten</defName>
            <label>make tungsten</label>
            <description>Burn tungstalk under extreme heat and smelt the tungsten rich ashes into a more usable form suited for further refinement. You can however also press tungstalk more efficiently by using the solus compressor.</description>
            <jobString>Making tungsten.</jobString>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>Cook</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <workAmount>2400</workAmount>
            <recipeUsers>
                <li>ElectricSmelter</li>
            </recipeUsers>
            <ingredients>
                <li>
                    <filter>
                        <thingDefs>
                            <li>RS_RawTungstalk</li>
                        </thingDefs>
                    </filter>
                    <count>40</count>
                </li>
            </ingredients>
            <fixedIngredientFilter>
                <thingDefs>
                    <li>RS_RawTungstalk</li>
                </thingDefs>
            </fixedIngredientFilter>
            <products>
                <RS_Tungsten>15</RS_Tungsten>
            </products>
        </RecipeDef>

</Defs>
