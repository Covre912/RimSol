<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>RS_AbsynthAsIngredient</defName>
		<label>drank absynth based cocktail</label>
		<makesSickThought>false</makesSickThought>
		<description>This colonist drank a cocktail that had absynth as one of its ingredients. Increases immunity gain speed by 15%.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VanillaCookingExpanded.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>RS_AbsynthAsIngredient</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>   
				<statOffsets>
					<ImmunityGainSpeedFactor>0.15</ImmunityGainSpeedFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

</Defs>