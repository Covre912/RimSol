<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimVali: Far From Avalon</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "RimValiPowderTungsten"]/ingredients/li/filter/thingDefs</xpath>
					<value>
                        <li>RS_Tungsten</li>
					</value>
                </li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "RimValiPowderTungstenTwo"]/ingredients/li/filter/thingDefs</xpath>
					<value>
                        <li>RS_Tungsten</li>
					</value>
                </li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_Absteel"]/ingredients</xpath>
					<value>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Steel</li>
									</thingDefs>
								</filter>
								<count>40</count>
							</li>
							<li>
								<filter>
									<thingDefs>
										<li>RS_Tungsten</li>
										<li>AvaliTungsten</li>
									</thingDefs>
								</filter>
								<count>10</count>
							</li>
						</ingredients>
					</value>
                </li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_Absteel"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
                        <li>AvaliTungsten</li>
					</value>
                </li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_BlocksAbstone"]/ingredients</xpath>
					<value>
						<ingredients>
							<li>
								<filter>
									<categories>
										<li>StoneChunks</li>
									</categories>
								</filter>
								<count>1</count>
							</li>
							<li>
								<filter>
									<thingDefs>
										<li>RS_Tungsten</li>
										<li>AvaliTungsten</li>
									</thingDefs>
								</filter>
								<count>5</count>
							</li>
						</ingredients>
					</value>
                </li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_BlocksAbstone"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
                        <li>AvaliTungsten</li>
					</value>
                </li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_BlocksAbstonefromBlocks"]/ingredients</xpath>
					<value>
						<ingredients>
							<li>
								<filter>
									<categories>
										<li>StoneBlocks</li>
									</categories>
								</filter>
								<count>20</count>
							</li>
							<li>
								<filter>
									<thingDefs>
										<li>RS_Tungsten</li>
										<li>AvaliTungsten</li>
									</thingDefs>
								</filter>
								<count>5</count>
							</li>
						</ingredients>
					</value>
                </li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "RS_Make_BlocksAbstonefromBlocks"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
                        <li>AvaliTungsten</li>
					</value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>