<Defs>

    <!-- Absteel -->
        <RecipeDef>
            <defName>RS_Make_Absteel</defName>
            <label>make absteel</label>
            <description>Make absteel.</description>
            <jobString>Making absteel.</jobString>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>Cook</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <workAmount>1200</workAmount>
            <recipeUsers>
                <li>ElectricSmelter</li>
            </recipeUsers>
            <ingredients>
                <li>
                    <filter>
                        <thingDefs>
                            <li>Steel</li>
                        </thingDefs>
                    </filter>
                    <count>40</count>
                </li>
                <li>
                    <filter>
                        <thingDefs>
                            <li>RS_Tungsten</li>
                        </thingDefs>
                    </filter>
                    <count>10</count>
                </li>
            </ingredients>
            <fixedIngredientFilter>
                <thingDefs>
                    <li>Steel</li>
                    <li>RS_Tungsten</li>
                </thingDefs>
            </fixedIngredientFilter>
            <products>
                <RS_Absteel>50</RS_Absteel>
            </products>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <workSkill>Crafting</workSkill>
        </RecipeDef>

